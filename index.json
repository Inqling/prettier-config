{
	"arrowParens": "always",
	"bracketSpacing": true,
	"bracketSameLine": false,
	"printWidth": 96,
	"semi": true,
	"singleQuote": true,
	"useTabs": true,
	"tabWidth": 2,
	"trailingComma": "all",
	"pluginSearchDirs": ["."],
	"overrides": [
		{
			"files": "*.svelte",
			"options": { "parser": "svelte" },
			"svelteSortOrder": "options-scripts-styles-markup"
		}
	]
}
